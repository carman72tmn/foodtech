[Unit]
Description=FoodTech Telegram Bot
After=network.target foodtech-api.service

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/foodtech/bot
Environment="PATH=/opt/foodtech/bot/venv/bin"
ExecStart=/opt/foodtech/bot/venv/bin/python main.py
Restart=always
RestartSec=10

# Безопасность
NoNewPrivileges=true
PrivateTmp=true

# Логирование
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
